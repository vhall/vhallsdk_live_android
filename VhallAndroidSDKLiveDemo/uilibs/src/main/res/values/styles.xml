<resources>


    <style name="BaseAppButtonForRed">
        <item name="android:background">@drawable/shape_bg_rounded_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="AppLineEditInputTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10sp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MyLoginCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/color_22</item>
        <item name="android:button">@drawable/check_box_selector</item>
    </style>

    <style name="VHCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/color_22</item>
        <item name="android:button">@drawable/check_box_selector1</item>
    </style>

    <style name="VHCheckBox1" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/color_22</item>
        <item name="android:button">@drawable/check_box_selector2</item>
    </style>


    <!--底部弹出dialog使用-->
    <style name="DialogBottomInAndOutStyle">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_FC5659</item>
    </style>
</resources>
