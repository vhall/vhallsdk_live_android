<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="BaseAppButtonForRed">
        <item name="android:background">@drawable/bg_common_rounded_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_content_size_16</item>
    </style>

    <style name="style0">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF961F</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_large</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--底部弹出dialog使用-->
    <style name="DialogBottomInAndOutStyle">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:button">@drawable/check_box_selector</item>
    </style>

</resources>
