<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/color_22"
    tools:ignore="RtlCompat">


    <com.vhall.vhallrtc.client.VHRenderView
        android:id="@+id/main_render_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_render_view">

        <LinearLayout
            android:id="@+id/ll_render_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_22"
            android:orientation="horizontal" />
    </HorizontalScrollView>


    <com.vhall.vhallrtc.client.VHRenderView
        android:id="@+id/share_render_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>