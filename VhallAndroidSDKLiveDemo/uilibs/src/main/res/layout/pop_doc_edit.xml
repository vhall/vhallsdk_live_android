<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="@dimen/dimen_36dp"
    android:layout_height="@dimen/dimen_200dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_doc_pop"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/select_pop_edit_color"
        android:src="@drawable/svg_ic_doc_del" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/select_pop_edit_color"
        android:src="@mipmap/icon_doc_line" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/select_pop_edit_color"
        android:src="@drawable/svg_ic_doc_eraser" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/select_pop_edit_color"
        android:src="@drawable/svg_ic_doc_color" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:background="@drawable/select_pop_edit_color"
        android:src="@drawable/svg_ic_doc_shape_white" />
</LinearLayout>