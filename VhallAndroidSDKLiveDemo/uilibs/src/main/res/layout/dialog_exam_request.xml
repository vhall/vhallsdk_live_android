<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="前置条件检查"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="初始化用户表单（pageId）"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_check"
        app:layout_constraintTop_toBottomOf="@+id/tv_check" />

    <TextView
        android:id="@+id/tv_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="发送验证码"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_init"
        app:layout_constraintTop_toBottomOf="@+id/tv_init" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:hint="填写验证码"
        android:inputType="number"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_send_code"
        app:layout_constraintStart_toEndOf="@+id/tv_send_code"
        app:layout_constraintTop_toTopOf="@+id/tv_send_code" />

    <TextView
        android:id="@+id/tv_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="验证验证码"
        android:textColor="#222222"
        app:layout_constraintBottom_toBottomOf="@+id/et_code"
        app:layout_constraintStart_toEndOf="@+id/et_code"
        app:layout_constraintTop_toTopOf="@+id/et_code" />

    <TextView
        android:id="@+id/tv_save_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="保存用户表单信息"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_send_code"
        app:layout_constraintTop_toBottomOf="@+id/et_code" />

    <TextView
        android:id="@+id/tv_exam_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="获取场次已推送试卷列表"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_save_form"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_form" />

    <TextView
        android:id="@+id/tv_exam_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="获取试卷详情"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_exam_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_exam_list" />

    <TextView
        android:id="@+id/tv_exam_answer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="单题提交"
        android:textColor="#222222"
        app:layout_constraintStart_toEndOf="@+id/tv_exam_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_exam_list" />


    <TextView
        android:id="@+id/tv_answer_paper_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="获取已答题记录断点续答"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_exam_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_exam_info" />

    <TextView
        android:id="@+id/tv_exam_submit_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="主动交卷"
        android:textColor="#222222"
        app:layout_constraintStart_toEndOf="@+id/tv_answer_paper_history"
        app:layout_constraintTop_toBottomOf="@+id/tv_exam_answer_question" />


    <TextView
        android:id="@+id/tv_exam_rank_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="获取榜单信息"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/tv_answer_paper_history"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer_paper_history" />

    <TextView
        android:id="@+id/tv_exam_person_score_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="获取个人成绩"
        android:textColor="#222222"
        app:layout_constraintStart_toEndOf="@+id/tv_exam_rank_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer_paper_history" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_person_score_info">

        <EditText
            android:id="@+id/tv_raw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/transparent"
            android:textColor="@color/color_FB3A32" />
    </ScrollView>


</android.support.constraint.ConstraintLayout>