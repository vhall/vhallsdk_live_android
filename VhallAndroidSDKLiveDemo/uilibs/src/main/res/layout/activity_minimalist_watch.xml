<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_22"
    tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dimen_18dp"
        android:layout_height="@dimen/dimen_18dp"
        android:layout_margin="@dimen/dimen_17dp"
        android:background="@drawable/icon_close_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_close"
        app:layout_constraintTop_toTopOf="@id/iv_close" />

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@drawable/bg_black_30_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_close">

        <com.vhall.uilibs.widget.NiceImageView
            android:id="@+id/iv_host_avatar"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:background="@mipmap/icon_avatar"
            app:is_circle="true" />

        <TextView
            android:id="@+id/tv_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_toEndOf="@id/iv_host_avatar"
            android:layout_toRightOf="@id/iv_host_avatar"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12dp" />

        <TextView
            android:id="@+id/tv_look_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/iv_host_avatar"
            android:layout_toRightOf="@id/iv_host_avatar"
            android:drawableStart="@drawable/svg_ic_look_num"
            android:drawableLeft="@drawable/svg_ic_look_num"
            android:drawablePadding="2dp"
            android:maxLines="1"
            android:textColor="@color/color_CECED1"
            android:textSize="@dimen/dimen_10dp" />

        <TextView
            android:id="@+id/tv_hot_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/tv_look_num"
            android:layout_toRightOf="@id/tv_look_num"
            android:drawableStart="@drawable/svg_ic_hot_num"
            android:drawableLeft="@drawable/svg_ic_hot_num"
            android:drawablePadding="2dp"
            android:maxLines="1"
            android:textColor="@color/color_CECED1"
            android:textSize="@dimen/dimen_10dp" />

    </RelativeLayout>


    <android.support.constraint.Group
        android:id="@+id/group_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_switch_camera,iv_switch_video,iv_switch_audio" />

    <ImageView
        android:id="@+id/iv_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_camera"
        app:layout_constraintBottom_toBottomOf="@id/rl_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_user" />

    <ImageView
        android:id="@+id/iv_switch_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_video_open"
        app:layout_constraintBottom_toBottomOf="@id/rl_user"
        app:layout_constraintEnd_toStartOf="@id/iv_switch_camera"
        app:layout_constraintTop_toTopOf="@id/rl_user" />

    <ImageView
        android:id="@+id/iv_switch_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_audio_open"
        app:layout_constraintBottom_toBottomOf="@id/rl_user"
        app:layout_constraintEnd_toStartOf="@id/iv_switch_video"
        app:layout_constraintTop_toTopOf="@id/rl_user" />


    <FrameLayout
        android:id="@+id/contentVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_75dp"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintTop_toBottomOf="@+id/rl_user" />

    <FrameLayout
        android:id="@+id/fl_notice_push_view"
        android:layout_width="250dp"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/chat_recycler_view"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_push"
            android:layout_width="250dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="bottom"
            android:background="@drawable/icon_gift_push"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_12dp"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingEnd="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12dp" />

        <ImageView
            android:id="@+id/iv_push"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="end|center_vertical" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="280dp"
        android:layout_height="207dp"
        android:layout_marginBottom="@dimen/dimen_17dp"
        android:requiresFadingEdge="vertical"
        app:layout_constraintBottom_toTopOf="@id/tv_chat"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:background="@drawable/bg_live_info"
        android:gravity="center_vertical"
        android:hint="@string/send_msg_hint"
        android:paddingLeft="@dimen/dimen_12dp"
        android:textColorHint="@color/color_F2"
        android:textSize="@dimen/dimen_14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_user_avatar" />

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:src="@drawable/icon_default_avatar"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chat" />

    <com.vhall.uilibs.widget.PressLikeView
        android:id="@+id/press_like"
        android:layout_width="150dp"
        android:layout_height="340dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/iv_like"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/icon_like"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/icon_gift"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_like" />


    <TextView
        android:id="@+id/tv_mic"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_mic"
        android:gravity="center"
        android:textColor="@color/color_FC5659"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_gift" />

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginBottom="8dp"
        android:background="@mipmap/icon_mic_down"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_gift" />

    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="@dimen/dimen_21dp"
        android:layout_height="@dimen/dimen_21dp"
        android:layout_gravity="end"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="@dimen/dimen_29dp"
        android:background="@drawable/shape_red_point"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>