<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="272dp"
    android:layout_height="150dp"
    android:background="@drawable/shape_timer_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:text="59分59秒倒计时进行中……"
        android:textSize="@dimen/dimen_14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg"
        android:layout_width="232dp"
        android:layout_height="@dimen/dimen_78dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:background="@drawable/shape_timer_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="50dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/icon_timer_time"
        android:gravity="center"
        android:textColor="@color/color_22"
        android:textSize="@dimen/dimen_44dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="50dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/icon_timer_time"
        android:gravity="center"
        android:textColor="@color/color_22"
        android:textSize="@dimen/dimen_44dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintStart_toEndOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="50dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:background="@drawable/icon_timer_time"
        android:gravity="center"
        android:textColor="@color/color_22"
        android:textSize="@dimen/dimen_44dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toStartOf="@+id/tv_4"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="50dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_timer_time"
        android:gravity="center"
        android:textColor="@color/color_22"
        android:textSize="@dimen/dimen_44dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/color_22"
        android:textSize="@dimen/dimen_44dp"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <View
        android:layout_width="210dp"
        android:layout_height="2dp"
        android:background="@color/color_D9"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginEnd="@dimen/dimen_25dp"
        android:layout_marginRight="@dimen/dimen_25dp"
        android:background="@drawable/icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>