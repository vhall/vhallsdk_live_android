<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlCompat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_73dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:visibility="gone"
        android:background="@drawable/shape_white_8"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_8c"
            android:textSize="@dimen/dimen_11dp"
            android:text="投资理财体验福利优惠券，每人限领1张，自领取之日起，有效期3天，先到先得！"
            android:gravity="left"
            android:layout_marginTop="@dimen/dimen_43dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:layout_marginBottom="@dimen/dimen_12dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_95dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/coupon_icon_master_item"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ticket_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_bg">
        <View
            android:id="@+id/view_head_bg"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_95dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:background="@drawable/shape_bg_rounded_coupon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_95dp"
            android:background="@drawable/shape_bg_rounded_coupon1"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_head_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"/>
        <ImageView
            android:id="@+id/im_ticket_bg"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_marginStart="@dimen/dimen_200dp"
            android:background="@drawable/icon_coupon_ticket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/im_ticket_flag"
            android:layout_width="@dimen/dimen_65dp"
            android:layout_height="@dimen/dimen_34dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:background="@drawable/icon_coupon_no_conditions"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ticket_bg_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_bg">
        <View
            android:id="@+id/view_head_bg_grey"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_95dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:background="@drawable/shape_bg_rounded_coupon_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_95dp"
            android:background="@drawable/shape_bg_rounded_coupon1_grey"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_head_bg_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_marginStart="@dimen/dimen_200dp"
            android:background="@drawable/icon_coupon_ticket_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/im_ticket_flag_grey"
            android:layout_width="@dimen/dimen_51dp"
            android:layout_height="@dimen/dimen_44dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:background="@drawable/icon_coupon_expire"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_8dp"
        android:background="@drawable/shape_white_circle"
        android:layout_marginStart="@dimen/dimen_128dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/v_bg_circle"
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_8dp"
        android:background="@drawable/shape_white_circle"
        android:layout_marginStart="@dimen/dimen_128dp"
        android:layout_marginTop="@dimen/dimen_103dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioButton
        android:id="@+id/rb_select"
        style="@style/VHCheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_coupon_deduction_amount"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        >
        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥"
            android:textSize="@dimen/dimen_12dp"
            android:lines="1"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_coupon_deduction_amount"
            app:layout_constraintEnd_toStartOf="@id/tv_coupon_deduction_amount"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:id="@+id/tv_coupon_deduction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="1000"
            android:textSize="@dimen/dimen_25dp"
            android:lines="1"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_rmb"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_coupon_threshold_amount"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:includeFontPadding="false"
        android:text="满100000.00可用"
        android:textSize="@dimen/dimen_12dp"
        android:lines="1"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cl_coupon_deduction_amount"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="start"
        android:text="理财体验福利券"
        android:textColor="@color/color_FC5659"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/tv_coupon_threshold_amount"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constrainedWidth="true"/>

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:gravity="start"
        android:text="全部商品可用"
        android:textColor="@color/black_45"
        android:textSize="@dimen/dimen_12sp"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:text="2023.06.16 12:08-2023.06.18 12:08"
        android:textColor="@color/black_45"
        android:textSize="11sp"
        android:lines="1"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_sub" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dimen_30dp"
        android:gravity="start"
        android:text="使用说明"
        android:textColor="@color/black_45"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_time"/>

    <ImageView
        android:id="@+id/iv_coupon_arrow"
        android:layout_width="@dimen/dimen_12dp"
        android:layout_height="@dimen/dimen_12dp"
        android:layout_marginStart="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/icon_coupon_arrow"
        app:layout_constraintStart_toStartOf="@id/tv_btn"
        app:layout_constraintTop_toBottomOf="@id/tv_time"/>



</androidx.constraintlayout.widget.ConstraintLayout>