<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/local_view_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/vhall_status_close_video"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_size_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_camera" />

        <ImageView
            android:id="@+id/image_switch_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_size_10"
            android:src="@drawable/icon_video_open" />

        <ImageView
            android:id="@+id/image_switch_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_size_10"
            android:src="@drawable/icon_audio_open" />

        <ImageView
            android:id="@+id/image_down_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_size_10"
            android:src="@drawable/icon_lower" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


</RelativeLayout>