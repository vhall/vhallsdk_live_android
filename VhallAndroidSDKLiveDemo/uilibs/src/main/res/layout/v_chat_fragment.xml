<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_chat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin_size_5"
        android:layout_marginLeft="@dimen/common_margin_size_5"
        android:layout_marginTop="@dimen/common_margin_size_5"
        android:layout_marginEnd="@dimen/common_margin_size_5"
        android:layout_marginRight="@dimen/common_margin_size_5"
        android:layout_marginBottom="@dimen/common_margin_size_5"
        android:layout_weight="1"
        android:background="@drawable/bg_chat_input"
        android:padding="10dp"
        android:text="我来说两句"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_chat_content" />

</RelativeLayout>